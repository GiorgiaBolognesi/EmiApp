<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PasswordFragment"
    android:id="@+id/passwordChange"
    android:background="@color/celeste1">


    <LinearLayout
        android:id="@+id/lineaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/vecchiaPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vecchia_password"
                android:textColor="@color/lavander"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/vecchiaPass1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="@string/oldPass"
                android:textColorHint="@color/lavander"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"
                android:textColor="@color/celeste"
                android:textSize="18sp"
                android:inputType="textPassword"
                app:backgroundTint="@color/lavander"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/lavander" />

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/nuovaPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nuova_password"
                android:textColor="@color/lavander"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nuovaPass1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="@string/newpass"
                android:textColorHint="@color/lavander"
                android:layout_marginRight="10dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/celeste"
                android:textSize="18sp"
                android:inputType="textPassword"
                app:backgroundTint="@color/lavander"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/lavander" />

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/confPass"
                android:layout_width="134dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/conferma_nuova_password"
                android:textColor="@color/lavander"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/confPass1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="@string/newpass"
                android:textColorHint="@color/lavander"
                android:layout_marginRight="10dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/celeste"
                android:textSize="18sp"
                android:inputType="textPassword"
                app:backgroundTint="@color/lavander"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="27dp"
        android:layout_weight="1"
        android:text="@string/cambia_password3"
        app:layout_constraintStart_toStartOf="@+id/lineaLayout"
        app:layout_constraintTop_toBottomOf="@+id/lineaLayout" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/comebackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/celeste"
        android:clickable="true"
        android:contentDescription="Add Attack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />


</androidx.constraintlayout.widget.ConstraintLayout>